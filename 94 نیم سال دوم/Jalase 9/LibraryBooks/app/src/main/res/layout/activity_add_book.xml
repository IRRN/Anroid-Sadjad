<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ir.ac.sadjad.librarybooks.AddBookActivity">

    <EditText
        android:id="@+id/addBook_editText_bookName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="97dp"
        android:textSize="20sp"
        android:ems="10"
        android:gravity="center"
        android:hint="نام کتاب"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/addBook_editText_bookCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/addBook_editText_bookName"
        android:layout_alignStart="@+id/addBook_editText_bookName"
        android:layout_below="@+id/addBook_editText_bookName"
        android:layout_marginTop="45dp"
        android:textSize="20sp"
        android:ems="10"
        android:gravity="center"
        android:hint="تعداد کتاب"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/addBook_button_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addBook_editText_bookCount"
        android:layout_alignLeft="@+id/addBook_editText_bookCount"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/addBook_editText_bookCount"
        android:layout_alignStart="@+id/addBook_editText_bookCount"
        android:layout_marginBottom="120dp"
        android:textSize="26sp"
        android:text="ثبت" />
</RelativeLayout>
